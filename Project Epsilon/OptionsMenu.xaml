<Window x:Class="Project_Epsilon.OptionsMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Options Menu" Height="400" Width="650" MinHeight="400" MinWidth="650">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FF216299"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="ToolSetupButton" Content="Tool Setup" Margin="0,0,0,130" Width="130" HorizontalAlignment="Center" Height="35" Click="OpenToolSetupWindow"/>
        <Button Content="Cavity Management" HorizontalAlignment="Center" Margin="0,0,0,30" Width="130" Height="35"/>
        <Button x:Name="UDISetupBtn" Content="UDI Setup" HorizontalAlignment="Center" Margin="0,130,0,0" Width="130" Height="35" Click="UDISetupBtn_Click"/>
        <Button x:Name="BackBtn" Content="&lt; Back" Margin="450,250,0,0" Width="75" Height="25" Click="BackBtn_Click"/>

    </Grid>
</Window>
